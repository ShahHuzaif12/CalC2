<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:layout_alignParentBottom="true"
    android:background="@color/black"
    tools:context=".MainActivity">

    <EditText
        android:background="@color/cardview_light_background"
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:text="0"
        android:textSize="45dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="4dp"

        />
    <LinearLayout
        android:id="@+id/Button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="horizontal">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ac"
            android:onClick="AC"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:text="AC"
            android:textSize="23sp"
            app:cornerRadius="30dp"
            android:backgroundTint="#AEE30E0E"
            android:layout_margin="8dp"
            />

        <com.google.android.material.button.MaterialButton

            android:id="@+id/btn_c"
            android:onClick="clear"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:text="C"
            android:textSize="34sp"
            app:cornerRadius="30dp"
            android:backgroundTint="#AEE30E0E"
            android:layout_margin="8dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_mod"
            android:onClick="op_button"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:text="%"
            android:textSize="34sp"
            app:cornerRadius="30dp"
            android:backgroundTint="#DAE30E7C"
            android:layout_margin="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_div"
            android:onClick="op_button"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_margin="8dp"
            android:backgroundTint="#DAE30E7C"
            android:text="/"
            android:textSize="34sp"
            app:cornerRadius="30dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/row_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="horizontal"
        tools:ignore="ExtraText">

        <com.google.android.material.button.MaterialButton
            android:onClick="Num_button"
            android:id="@+id/btn_7"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:text="7"
            android:textSize="23sp"
            app:cornerRadius="30dp"
            android:backgroundTint="#6047E30E"
            android:layout_margin="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:onClick="Num_button"
            android:id="@+id/btn_8"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:text="8"
            android:textSize="34sp"
            app:cornerRadius="30dp"
            android:backgroundTint="#6047E30E"
            android:layout_margin="8dp"/>
        <com.google.android.material.button.MaterialButton
            android:onClick="Num_button"
            android:id="@+id/btn_9"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:text="9"
            android:textSize="34sp"
            app:cornerRadius="30dp"
            android:backgroundTint="#6047E30E"
            android:layout_margin="8dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_mul"
            android:onClick="op_button"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:text="x"
            android:textSize="34sp"
            app:cornerRadius="30dp"
            android:backgroundTint="#DAE30E7C"
            android:layout_margin="8dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/row_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="horizontal"
        tools:ignore="ExtraText">


        <com.google.android.material.button.MaterialButton
            android:onClick="Num_button"
            android:id="@+id/btn_4"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:text="4"
            android:textSize="23sp"
            app:cornerRadius="30dp"
            android:backgroundTint="#6047E30E"
            android:layout_margin="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:onClick="Num_button"
            android:id="@+id/btn_5"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:text="5"
            android:textSize="34sp"
            app:cornerRadius="30dp"
            android:backgroundTint="#6047E30E"
            android:layout_margin="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_6"
            android:onClick="Num_button"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_margin="8dp"
            android:backgroundTint="#6047E30E"
            android:text="6"
            android:textSize="34sp"
            app:cornerRadius="30dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_min"
            android:onClick="op_button"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:text="-"
            android:textSize="34sp"
            app:cornerRadius="30dp"
            android:backgroundTint="#DAE30E7C"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/Row_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="horizontal">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_1"
            android:onClick="Num_button"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:text="1"
            android:textSize="23sp"
            app:cornerRadius="30dp"
            android:backgroundTint="#6047E30E"
            android:layout_margin="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_2"
            android:onClick="Num_button"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:text="2"
            android:textSize="34sp"
            app:cornerRadius="30dp"
            android:backgroundTint="#6047E30E"
            android:layout_margin="8dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_3"
            android:onClick="Num_button"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:text="3"
            android:textSize="34sp"
            app:cornerRadius="30dp"
            android:backgroundTint="#6047E30E"
            android:layout_margin="8dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_pul"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:text="+"
            android:textSize="34sp"
            app:cornerRadius="30dp"
            android:backgroundTint="#DAE30E7C"
            android:layout_margin="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/row_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="horizontal">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_brac"
            android:onClick="Braces"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:text="()"
            android:textSize="23sp"
            app:cornerRadius="30dp"
            android:backgroundTint="#6047E30E"
            android:layout_margin="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_zero"
            android:onClick="Num_button"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:text="0"
            android:textSize="34sp"
            app:cornerRadius="30dp"
            android:backgroundTint="#6047E30E"
            android:layout_margin="8dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dot"
            android:onClick="Num_button"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:text="."
            android:textSize="34sp"
            app:cornerRadius="30dp"
            android:backgroundTint="#6047E30E"
            android:layout_margin="8dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_equal"
            android:onClick="equal"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:text="="
            android:textSize="34sp"
            app:cornerRadius="30dp"
            android:backgroundTint="#DAE30E7C"
            android:layout_margin="8dp"/>

    </LinearLayout>




</LinearLayout>